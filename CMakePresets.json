{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25
  },
  "configurePresets": [
    {
      "name": "dev",
      "displayName": "Dev (Ninja, Debug)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "MODERNCLI_BUILD_TESTS": "ON",
        "MODERNCLI_BUILD_EXAMPLES": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "dev-build",
      "configurePreset": "dev"
    }
  ],
  "testPresets": [
    {
      "name": "dev-test",
      "configurePreset": "dev"
    }
  ]
}
