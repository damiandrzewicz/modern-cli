{
  "cmake.configureOnOpen": true,
  "cmake.generator": "Ninja",
  "cmake.presetsEnabled": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "xaver.clang-format",
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
  "C_Cpp.codeAnalysis.clangTidy.enabled": true,
  "C_Cpp.codeAnalysis.clangTidy.path": "clang-tidy",
  "C_Cpp.codeAnalysis.clangTidy.useBuildPath": true,
  "C_Cpp.codeAnalysis.clangTidy.buildPath": "build",

    // GitLens AI: generate a single commit message
  "gitlens.ai.generateCommitMessage.customInstructions": 
    "Follow the rules described in docs/commits.md for commit messages.",

  // GitLens AI: generate multiple commits
  "gitlens.ai.generateCommits.customInstructions": 
    "Follow the rules described in docs/commits.md for commits."
}
